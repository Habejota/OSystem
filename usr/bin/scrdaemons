#!/bin/bash.exe

alias echo="builtin echo"
export PATH="/bin"

NAME="`basename $0`"

case "$1" in
  start|stop|config|configure|show)
    if [ "$1" == "start" ]; then
      printf "%-36s" "starting $NAME daemon..."
    elif [ "$1" == "stop" ]; then
      printf "%-36s" "stopping $NAME daemon..."
    fi
    /bin/MobaSendMsg.exe MobaXterm "service $NAME $1"
    if [ "$?" == "0" ]; then
      if [ "$1" == "stop" ] || [ "$1" == "start" ]; then
        /bin/MobaSendMsg.exe MobaXterm "service $NAME status"
        if [ "$?" -eq "0" -a "$1" == "stop" ] || [ "$?" -eq "1" -a "$1" == "start" ]; then
	  echo -e "\E[32m[OK]\E[0m"
        else
	  echo -e "\E[31m[Ko]\E[0m"
        fi
      fi
    else
      echo -e "\E[31m[Ko]\E[0m"
    fi
  ;;
  restart)
    "$0" stop
    "$0" start
  ;;
  status)
    /bin/MobaSendMsg.exe MobaXterm "service $NAME $1"
    if [ "$?" == "1" ]; then
      echo -e "$NAME daemon is \E[32mrunning\E[0m"
    else
      echo -e "$NAME daemon is \E[31mstopped\E[0m"
    fi
  ;;
  *)
    /bin/MobaSendMsg.exe MobaXterm "service $NAME config"
esac


exit 0

